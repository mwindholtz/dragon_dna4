<% content_for :header, "Groups"%>
<% content_for :second_nav do -%>
  <li><%= link_to image_new , new_group_path %></li>
<%- end -%>

<table>
  <tr>
    <th>Name</th>
    <th>Count</th>
    <th>Location</th>
  </tr>

<% for group in @groups %>
  <tr>
    <td><%= link_to( group.name, group) %></td>
    <td><%=h group.targets.size.to_s %></td>
    <td><%=h group.location %></td>
    <td><%= link_to image_edit, edit_group_path(group) %></td>
    <td><%= link_to image_delete, group, :confirm => "Delete: #{group.name}?", :method => :delete %></td>
    <td><%= link_to_present_group(group) %></td>
  </tr>
<% end %>
</table>
